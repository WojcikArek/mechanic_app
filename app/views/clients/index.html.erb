<p style="color: green"><%= notice %></p>

<h1>Clients List</h1>

<table class="table  table-hover table-bordered">
    <thead>
      <tr class="table-active">
        <th>Name</th>
        <th>Phone</th>
        <th>Car</th>
        <th>Model</th>
        <th></th>
      </tr>
    </thead>

<tbody>
  <% @clients.each do |client| %>
   <tr>
   <td>
   <%=client.First_name%>  <%= client.Last_name%>
   </td>
   <td>
    <%= client.Phone%>
   </td>
   <td>
    <%= client.Car%>
   </td>
   <td>
    <%= client.Model%>
   </td>
    <td>
      <%= link_to "Show", client, class:"btn btn-secondary btn-sm" %>
  </td>
  <% end %>

</table>
<%= link_to "New client", new_client_path, class:"btn btn-success btn-sm" %>
